            <TextField fx:id="txtIncome" layoutX="88.0" layoutY="54.0" />
            <TextField fx:id="txtExpenses" layoutX="88.0" layoutY="97.0" />
            <TextField fx:id="txtCreditScore" layoutX="88.0" layoutY="137.0" />
            <TextField fx:id="txtHouseCost" layoutX="88.0" layoutY="174.0" />
            <ComboBox fx:id="loanTerm" layoutX="88.0" layoutY="239.0" prefWidth="150.0" promptText="Term" visibleRowCount="3" />
