<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rocket.app.view.MortgageController">
   <children>
      <AnchorPane prefHeight="400.0" prefWidth="400.0">
         <children>
            <Label layoutX="12.0" layoutY="59.0" text="Income" />
            <Label layoutX="6.0" layoutY="102.0" text="Expenses" />
            <Label layoutX="1.0" layoutY="179.0" text="HouseCost" />
